<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="Fita2.Clock" level="DEBUG" />
    <logger name="fita2.visitor" level="DEBUG" />
    <logger name="fita2.locked" level="DEBUG" />
    <logger name="Fita1" level="WARN" />
    <logger name="fita1.states" level="INFO" />
    <logger name="fita1.propped" level="WARN" />
    <logger name="fita1.unlocked" level="WARN" />


    <appender name="FILE_TXT" class="ch.qos.logback.core.FileAppender">
        <file>test2.txt</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_HTML" class="ch.qos.logback.core.FileAppender">
        <file>test2.html</file>
        <append>true</append>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.html.HTMLLayout" />
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="FILE_HTML" />
        <appender-ref ref="FILE_TXT" />
        <appender-ref ref="STDOUT" />

    </root>



























